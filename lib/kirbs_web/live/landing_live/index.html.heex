      color: #333;
  }

  .modal-content h3 {
      color: #FF7F3F;
      font-size: 1.8em;
      margin-bottom: 20px;
      font-weight: 700;
  }

  .modal-content p {
      color: #555;
      line-height: 1.8;
      margin-bottom: 15px;
  }

  .modal-content strong {
      color: #FF7F3F;
      font-weight: 700;
  }

  nav a:hover {
