      color: white;
      padding: 50px 40px;
      border-radius: 30px;
      box-shadow: 0 20px 50px rgba(255, 127, 63, 0.2);
      position: relative;
      overflow: hidden;
  }

  .guide::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  }

  .guide h3 {
