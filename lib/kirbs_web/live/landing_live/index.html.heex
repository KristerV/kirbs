  .box-donate::before { background: #2196F3; }
  .box-recycle::before { background: #9C27B0; }

  .sorting-box h4 {
      color: #FF7F3F;
      margin-bottom: 10px;
      font-size: 1.1em;
      font-weight: 700;
  }

  .sorting-box p {
      font-size: 0.9em;
      color: #666;
  }

  .clothes-icon {
      font-size: 2em;
      margin-bottom: 10px;
      display: block;
  }

  .guide {
